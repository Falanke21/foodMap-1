/* pages/productPage/productPage.wxss */
page{
  background-color: rgb(255, 98, 99);
  color: white;
}

.imageWrapper{
  margin-top: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.couponImage{
  width: 100%;
  height: 290px;
  z-index: 1
}

.product-container{
  text-align: center;
  font-size: x-large;
}

.product-btn {
  width: 135px;
  height: 50px;
  margin-top: 30rpx;
  margin: 0 auto;
  display: flex;
}
.product{  
  width: 100%;  
  font-size: 35rpx;  
  display: flex;  
  height: 80rpx;  
  border-bottom: 1px 
  solid rgba(240, 223, 128, 0.664);  
  flex-direction: row;  
  justify-content: space-between;  
  align-items: center;
}

.number-selector{
  margin: 30px auto;
  font-size: x-large;
  display: flex;
  justify-content: center;
}

.add-btn{
  margin: 0 10px;
}

.minus-btn{
  margin: 0 10px;
}

.add-num{
  color: rgb(160, 245, 245);
}