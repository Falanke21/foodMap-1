}

.widget_arrow{
    width:40px; 
    height:40px; 
}

.product-btn {
  width: 90%;
  margin-top: 30rpx;
  background-color: #FFCC00;
  color: #FFF;
}
.product{  
  width: 100%;  
  font-size: 35rpx;  
  display: flex;  
  height: 80rpx;  
  border-bottom: 1px 
  solid rgba(240, 223, 128, 0.664);  
  flex-direction: row;  
  justify-content: space-between;  
  align-items: center;
}
.left{  
  padding-left: 30rpx;  
  color: rgb(169, 169, 169);  
}
.right{
  padding-right: 30rpx;
}
