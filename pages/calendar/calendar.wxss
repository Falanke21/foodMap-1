/* pages/calendar/calendar.wxss */
page {
  background: linear-gradient(to bottom, #654ea3, #eaafc8, #ffffff);
}

.item-container {
  /* border: solid 1px black; */
  height: 80px;
}

.product {
  background: linear-gradient(to bottom, #de6262, #ffb88c); 
  margin-top: 10px;
  margin-left: 30px;
  margin-right: 30px;
  padding: 20px;
  border-radius: 20px;

  box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2), 0 12px 20px 0 rgba(0, 0, 0, 0.19);
}

.product-text {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: medium;
  text-align: center;
  color: white;
}

.type-image {
  height: 30px;
  width: 30px;
  margin-right: 5px;
}