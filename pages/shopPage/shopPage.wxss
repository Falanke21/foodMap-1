/* pages/popupPage/popupPage.wxss */
.body {
  background-color: #0000cc;
}

.popup-container {
  position: flex;

  /* left: 10%;
  top: 10%; */
  
  margin: 0 auto;

  /* width: 80%; */
  max-width: 600rpx;
  box-sizing: bordre-box;
  /* transform: translate(-50%, -50%);  */
  overflow: hidden;

  justify-content: center; 
  align-items: center;
}

.merchant-name {
  font-size: xx-large;
  text-align: center;
  font-weight: bold;
}

.merchant-address {
  margin: 10px auto;
  font-size: small;
  text-align: center;
  color: rgb(78, 78, 78);
}

.merchant-likes {
  margin: 10px auto;
  font-size: medium;
  text-align: center;
  width: 45%;
}

.image-lit {
  float: right;
  height: 20px;
  width: 20px;
}

.swiper-container {
  margin: 15px auto;
  height: 240px;
  overflow: hidden;
  width: 90%;
}

.swiper-image {
  width: 100%;
  border-radius: 10%;
  height: 240px;
}

.dividing-line{
  border: black solid 1px;
  margin: 0 auto;
  width: 95%;
}

.merchant-description {
  margin: 10px 0;
  text-align: center;
  color: rgb(78, 78, 78);
  font-size: medium;
}

.merchant-hours {
  display: block;
  margin: 10px auto;
  width: 65%;
  border-left: black 1px solid;
  border-right: black 1px solid;
  color: rgb(78, 78, 78);
}
.merchant-hour {
  margin: 5px 0;
  font-size: medium;
  text-align: center;
}

.wx-popup-likes {
  width: 50px;
  height: 50px;
  background: #999;
  text-align: center;
  line-height: 50px;
  border-radius: 50%;
  /* position: absolute; */
  /* left: 250px; */
  /* top: 350px; */
  transition: 0.5s;
  color: #fff;
  display: inline-block;
  margin: 10px;
}

.coupon-container {
  height: auto;
  width: auto;
}

.coupon {
  margin: 10px auto;
  width: 300px;
}

.signin {
  margin: 10px auto;
  width: 300px;
}
