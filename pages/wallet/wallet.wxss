/* pages/wallet/wallet.wxss */
page {
    background-color: rgb(255, 255, 255);
}

.item-container {
  border: none;
  height: 150rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx
}

.header{
  background: linear-gradient(to bottom, #00b377, #00b377);
  color: white;
  text-align: center;
  font-size: larger;
  font: bolder;
  padding-top: 20px;
  padding-bottom: 20px;
}

.empty-wallet{
  border: solid 10rpx rgb(255, 255, 255);
  height: center;
  margin-top: 250rpx;
  border-radius: 30rpx;
  flex-direction: center; 
  justify-content: center;
  align-items: center;
  
}

.empty-wallet-text{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-display: bold;
  font-size: large;
  color: aliceblue
}

.product {
   background: linear-gradient(to bottom, #00b377, #00b377);
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  border: solid rgb(20, 153, 131) 5rpx;

  max-height: 300rpx;
  max-width: 1000rpx
}

.product-text {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: large;
  text-align: center;
  color: white;

}
.item-date-text{
  margin-left: 5rpx;
  display: flex;
  color: white;
  justify-content: right;
  text-align: right;
  font-size: small;
}

.type-image {
  height: 30rpx;
  width: 30rpx;
  margin-right: 5rpx;
}

.btn {
  
  border: solid 1rpx black;
  height: 100rpx;
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
  margin-right: 30rpx
}

.view {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: smaller;
  text-align: center;
  color: white;
}