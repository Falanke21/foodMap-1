.header{
  /* background: linear-gradient(to bottom, #2f9774, #00b377);   */
  background: linear-gradient(to bottom, #e44d26, #f16529);
  color: white;
  text-align: center;
  font-size: larger;
  font: bolder;
  padding-top: 20px;
  padding-bottom: 20px;
}
.type-image {
  margin-left: 35%;
  margin-right:33%;
  margin-bottom: 5px;
  width: 60rpx;
  height: 60rpx;
  display: block;

}
.product{
  padding-top:10px;
  padding-bottom: 10px;
  width: 33%;
  text-align: center;
  border-top: solid rgb(255, 98, 99) 1rpx;
  border-right: solid rgb(255, 98, 99) 1rpx;
}
.list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding:4%;
}
.product:nth-child(3n){
  border-right: solid rgb(255, 98, 99) 0px !important;
}
.product:first-child, .product:nth-child(2), .product:nth-child(3){
  border-top: solid rgb(255, 98, 99) 0px !important;
}

.product-text{
  font-size:25rpx;
  color:rgb(38, 173, 190)
}

.type-border{
  width:91%;
  height:90rpx;
  display:block;
  justify-content:center;
  align-items:center;
  border-bottom:solid rgb(255, 98, 99) 2rpx;
  margin:0 auto;


}
.type-text{
  font-size: 50rpx;
  padding-top:30rpx;
  color: rgb(255, 98, 99);
  text-align: center;
}

