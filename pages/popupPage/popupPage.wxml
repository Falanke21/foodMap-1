</view>


      
    <view class='popup-btn'>
    <view class='like-container'>
      <!-- <view class="wx-popup-likes">{{likes}}</view> -->
      <button class='like-btn' bindtap='addLike'>赞爆</button>
    </view>
    
    <button bindtap= 'navigate'> 导航</button>
    </view>
    
  </view>